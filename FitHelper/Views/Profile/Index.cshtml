@model IEnumerable<FitHelper.Models.ProfileDetails>

@{
    ViewData["Title"] = "Профiль";
}

<partial name="_Header" />
<partial name="_AsideBar" />

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Профiль</h1>
    </div>

    <section class="section profile">
        @foreach (var item in Model)
        {
            <div class="row">

                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                            <img src="" alt="Profile" class="rounded-circle">
                            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                        </div>
                    </div>
                </div>

                <div class="col-xl-8">
                    <div class="card">
                        <div class="card-body pt-3">

                            <!-- Bordered Tabs -->
                            <ul class="nav nav-tabs nav-tabs-bordered">
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Profile" asp-action="Index">Огляд</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Profile" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Profile" asp-action="Create">Заповнити профiль</a>
                                </li>
                            </ul>

                            <div class="tab-content pt-2">
                                <div class="tab-pane fade show active profile-overview" id="profile-overview">

                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Вiк</div>
                                        <div class="col-lg-9 col-md-8">@Html.DisplayFor(modelItem => item.Age)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Зрiст</div>
                                        <div class="col-lg-9 col-md-8">@Html.DisplayFor(modelItem => item.Height)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Вага</div>
                                        <div class="col-lg-9 col-md-8">@Html.DisplayFor(modelItem => item.Weight)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Бажана кiлькiсть калорiй</div>
                                        <div class="col-lg-9 col-md-8">@Html.DisplayFor(modelItem => item.calorie_goal)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Бажана кiлькiсть води</div>
                                        <div class="col-lg-9 col-md-8">@Html.DisplayFor(modelItem => item.water_goal)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Бажана кiлькiсть крокiв</div>
                                        <div class="col-lg-9 col-md-8">@Html.DisplayFor(modelItem => item.step_goal)</div>
                                    </div>

                                </div>
                            </div>
                            <!-- End Bordered Tabs -->

                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</main>

<partial name="_Footer" />