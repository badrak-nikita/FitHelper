@model FitHelper.Models.Auth

<main>
    <div class="container">
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center w-auto">
                                <img src="~/img/logo.png" alt="">
                                <span class="d-none d-lg-block">FitHelper</span>
                            </a>
                        </div>

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Авторизацiя</h5>
                                    <p class="text-center small">Введіть своє ім'я користувача та пароль для входу</p>
                                </div>

                                <form asp-controller="Account" asp-action="Login" method="post">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    <div class="col-12">
                                        <label class="form-label">Логiн</label>
                                        <input asp-for="UserName" type="text" class="form-control" required>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Пароль</label>
                                        <input asp-for="Password" type="password" class="form-control" required>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-check">
                                            <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                                            <label asp-for="RememberMe" class="form-check-label">Запам'ятати мене</label>
                                        </div>
                                    </div>

                                    <p></p>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Вхiд</button>
                                    </div>
                                    <p></p>
                                    <div class="col-12">
                                        <p class="small mb-0">Немає облікового запису? <a asp-controller="Account" asp-action="Register"> Створити акаунт</a></p>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
</main>